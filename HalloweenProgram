⠀⠀⠀⠀⠀⠀⣿⣿⣿⣿⣿⣷⣄
⠀⠀⠀⠀⠀⠀⠛⠛⠛⠛⠛⠛⠉
    "Bad choice."
    )" << endl;
    }
}

// Function for the fourth decision point (opening the door)
void fourthDecision() {
    int action;
    cout << "You open the door and find a treasure chest! What do you do? (1: Open it, 2: Leave it): ";
    cin >> action;

    switch (action) {
        case 1:
            cout << "You open the chest and find gold! You are now rich!" << endl;
             cout << R"(
*******************************************************************************
          |                   |                  |                     |
 _________|________________.=""_;=.______________|_____________________|_______
|                   |  ,-"_,=""     `"=.|                  |
|___________________|__"=._o`"-._        `"=.______________|___________________
          |                `"=._o`"=._      _`"=._                     |
 _________|_____________________:=._o "=._."_.-="'"=.__________________|_______
|                   |    __.--" , ; `"=._o." ,-"""-._ ".   |
|___________________|_._"  ,. .` ` `` ,  `"-._"-._   ". '__|___________________
          |           |o`"=._` , "` `; .". ,  "-._"-._; ;              |
 _________|___________| ;`-.o`"=._; ." ` '`."\` . "-._ /_______________|_______
|                   | |o;    `"-.o`"=._``  '` " ,__.--o;   |
|___________________|_| ;     (#) `-.o `"=.`_.--"_o.-; ;___|___________________
____/______/______/___|o;._    "      `".o|o_.--"    ;o;____/______/______/____
/______/______/______/_"=._o--._        ; | ;        ; ;/______/______/______/_
____/______/______/______/__"=._o--._   ;o|o;     _._;o;____/______/______/____
/______/______/______/______/____"=._o._; | ;_.--"o.--"_/______/______/______/_
____/______/______/______/______/_____"=.o|o_.--""___/______/______/______/____
/______/______/______/______/______/______/______/______/______/______/______/_
*******************************************************************************
    )" << endl;
            fifthDecision();
            break;
        case 2:
            cout << "You leave the chest alone and exit the house safely." << endl;
            break;
        default:
            cout << "Invalid choice. The adventure ends here." << endl;
            break;
    }
}

// Function for the fifth decision point (after finding the treasure)
void fifthDecision() {
    int choice;
    cout << "With your newfound wealth, you can either donate to the local orphanage (1) or keep it all for yourself (2): ";
    cin >> choice;

    if (choice == 1) {
        cout << "You generously donate the treasure. The children are grateful, and you feel fulfilled!" << endl;
 cout << R"(
            
           .===.
          / ,,, \        .===.         
         ( /6.6\ )      ////\\\       .===.
         )(  V  )(     ((/6.6\))     /_____\__     .===.
        ( ,'---', )    )(  V  )(    `\/6.6\/--`   ////\\\
         / (\-/) \    ((()---()))    (  V  )      \/6.6\/
        /_ /o o\ _\    /  `@`  \     ,'---',      (  V  )
        | _\ Y /_ |   /\/     \/\   /   _   \     ,'---',
        \(_ `~` _)/   \ |     | /  /_/ (_) \_\   /       \
         / /   \ \     \|     |/   \ | (_) | /  /_/     \_\      
        / ()/^\() \     |_____|     \|_____|/    \|     |/
       /. . . . . .\    |__|__|      |  |  |     (|_____|)
       `"`"|`|`|"`"`     | | |       |  |  |      |__|__|
           |_|_|         |_|_|       \__|__/       |_|_|
          _|_|_|_       _|_|_|_      _|_|_|_      _|_|_|_
         (___|___)     (___|___)    (___|___)    (___|___)
            
    )" << endl;
    } else {
        cout << "You keep the treasure. However, you find yourself lonely, as wealth cannot buy true happiness." << endl;
    }
}

// Main function to start the game
int main() {
    displayHauntedHouse();
    firstDecision();
    return 0;
}   // "Run, before I make you meet jah!" The ghost turns out to be friendly! You make a new friend and share stories.
